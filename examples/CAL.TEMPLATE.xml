          <ScriptName>TEMPLATEDiscovery.ps1</ScriptName>
          <ScriptBody>Param($SourceID,$ManagedEntityId)
Import-Module "E:\Program Files\System Center 2012\Operations Manager\Powershell\OperationsManager\OperationsManager.psm1"
New-SCOMManagementGroupConnection -ComputerName localhost
#Discovery Proprty Bag
$api = New-Object -ComObject 'MOM.ScriptAPI'
$Discovery = $api.CreateDiscoveryData( 0, $SourceID, $ManagedEntityId)
#Get Application Groups
$Groups = get-scomgroup -displayname "CAL_TEMPLATE_*" | ? {$_.displayname -like "*PROD" -or $_.displayname -like "*DR" }

foreach ($Group in $Groups)
{

    $Servers = $Group.GetRelatedMonitoringObjects()
    
    foreach ($Server in $Servers)
                {
                    $Name = Get-SCOMClass -name "Microsoft.Windows.Computer" | Get-SCOMClassInstance | ? {$_.name -like $Server.Name -and $_.name -ne $null} | Select-Object -ExpandProperty *.DNSName
                    $ServerName = $Name.value
                    if($ServerName -ne $null)
                    {
                    $AppInstance = $Discovery.CreateClassInstance("$MPElement[Name='CAL.TEMPLATE.Class']$")
                    $AppInstance.AddProperty("$MPElement[Name='System!System.Entity']/DisplayName$","CAL TEMPLATE")
                    $AppInstance.AddProperty("$MPElement[Name='Windows!Microsoft.Windows.Computer']/PrincipalName$",$ServerName)
                    $AppInstance.AddProperty("$MPElement[Name='CAL.TEMPLATE.Class']/Name$","CAL TEMPLATE")
                    $Discovery.AddInstance($AppInstance)

                    if ($Group.DisplayName -like "*PROD")
                        {
                         $AppInstancePROD = $Discovery.CreateClassInstance("$MPElement[Name='CAL.TEMPLATE.PROD']$")
                         $AppInstancePROD.AddProperty("$MPElement[Name='System!System.Entity']/DisplayName$","CAL TEMPLATE PROD")
                         $AppInstancePROD.AddProperty("$MPElement[Name='Windows!Microsoft.Windows.Computer']/PrincipalName$",$ServerName)
                         $AppInstancePROD.AddProperty("$MPElement[Name='CAL.TEMPLATE.PROD']/Site$","PROD")
                         $AppInstancePROD.AddProperty("$MPElement[Name='CAL.TEMPLATE.Class']/Name$","CAL TEMPLATE")
                         $Discovery.AddInstance($AppInstancePROD)
                        }

                    if ($Group.DisplayName -like "*DR")
                        {
                         $AppInstanceDR = $Discovery.CreateClassInstance("$MPElement[Name='CAL.TEMPLATE.DR']$")
                         $AppInstanceDR.AddProperty("$MPElement[Name='System!System.Entity']/DisplayName$","CAL TEMPLATE DR")
                         $AppInstanceDR.AddProperty("$MPElement[Name='Windows!Microsoft.Windows.Computer']/PrincipalName$",$ServerName)
                         $AppInstancePROD.AddProperty("$MPElement[Name='CAL.TEMPLATE.DR']/Site$","DR")
                         $AppInstanceDR.AddProperty("$MPElement[Name='CAL.TEMPLATE.Class']/Name$","CAL TEMPLATE")
                         $Discovery.AddInstance($AppInstanceDR)
                        }

                    Write-EventLog -LogName 'Operations Manager' -EventId 556 -Message $ServerName -Source "HealthService"
                    write-host $Name -ForegroundColor Red
                    }
                }
}



Write-EventLog -LogName 'Operations Manager' -EventId 556 -Message "DONE" -Source "HealthService"

$Discovery</ScriptBody>
